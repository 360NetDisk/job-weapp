/* pages/login/login.wxss */
page{
  background: #f4f4f4
}
.container{
  padding: 0;
}

.bg-img{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1
}
.logo-img{
  text-align: center;
}
.logo{
  width: 162rpx;
  height: 162rpx;
  margin: 120rpx auto 0;
}

.phone{
  width: 600rpx;
  height: 88rpx;
  border-radius: 40rpx;
  background: #ffffff;
  margin: 120rpx auto 0;
}

.code{
  width: 600rpx;
  height: 88rpx;
  border-radius: 40rpx;
  background: #ffffff;
  margin: 68rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.phone input{
  width: 100%;
  height: 100%;
  line-height: 88rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
}

.code input{
  width: 50%;
  height: 100%;
  line-height: 88rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
}

.code button{
  width: 200rpx;
  height: 50rpx;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 40rpx;
  background: #32e0c1;
  line-height: 50rpx;
  margin-right: 20rpx;
  padding: 0;
}

.loginBtn{
  width: 590rpx;
  margin: 50rpx auto 0;
  border-radius: 15rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  /* background-color: #9af5e5; */
  background-color: #32e0c1;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  padding: 0
}
.loginBtn:after{
  border: none
}