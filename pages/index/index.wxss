/**index.wxss**/
.container{
  width: 100%;
  background-color: #fff;
}
.search{
  width: 100%;
  display: flex;
  height: 88rpx;
  align-items: center;
  background-color: #32e0c1;
  
}
.address{
  position: relative;
  height: 60rpx;
}
.address text{
  margin-left: 30rpx;
  font: 24rpx;
  color: #fff;
}
.address image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 11rpx
}
.search-inp{
  margin-left: 60rpx;
  height: 60rpx;
  width: 450rpx;
  border-radius: 60rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  position: relative;
  line-height: 60rpx;
}
.search-inp .pos1{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left:78rpx;
  top: 15rpx;
}
.list{
  width: 100%;
  margin: 0 auto;
  border-bottom: 1rpx solid #eee;
  height: 180rpx;
  display: flex;
  align-items: center;
}
.list .list-image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-right: 15rpx;
  margin-top: -50rpx;
}
.list-text{
  display: flex;
  flex-direction: column;
  width: 625rpx;
  margin-right: 30rpx;
}
.list-text .list-one{
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.list-text .list-two{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #b5b5b5;
  margin: 10rpx 0;
}
.list-btn{
  font-size: 20rpx;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(244, 213, 8, 0.2);
  color: #999;
  border-radius: 40rpx;
}