/* pages/resume/ resume.wxss */
@import "../../dist/weui.wxss";
page{
  width: 100%;
  height: 100%;
}
.container{
  background-color: #f8f8f8;
  width: 100%;
  height: 100%;
}
.avatar{
  width: 100%;
  height: 144rpx;
  border-top: 50rpx solid transparent;
  display: flex;
  justify-content: center;
    margin-bottom: 20rpx;
}
.avatar image{
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  overflow: hidden;
}
.re-list{
  width: 690rpx;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 30rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.sex{
  width: 490rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.picker{
  width: 490rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}
.btn1{
  width: 590rpx;
  margin: 50rpx auto 0;
  border-radius: 15rpx;
  height: 100rpx;
  color: #fff;
  font-size: 40rpx;
  /* background-color: #9af5e5; */
  background-color: #32e0c1;
  display: flex;
  justify-content: center;
  align-items: center;
}