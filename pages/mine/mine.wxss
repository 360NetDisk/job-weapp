/* pages/mine/mine.wxss */
page{
  height:100%
}
.user-poster {
  width: 100%;
  height: 432rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #32e0c1;
}
.user {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar image {
  width: 100%;
  height: 100%;
}
.userlogin{
  display: flex;
  flex-direction: column;
}
.write{
  font-size:30rpx;
  color:#fff;
  border:1px solid #fff;
  border-radius:10rpx;
  padding:5rpx 20rpx;
}